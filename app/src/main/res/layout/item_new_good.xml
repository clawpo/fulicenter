<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/layoutGood">
    <ImageView
        android:id="@+id/ivGoodThumb"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:src="@drawable/nopic"/>
    <TextView
        android:id="@+id/tvGoodName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/item_good_text"
        android:textSize="13sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称" />
    <TextView
        android:id="@+id/tvCurrencyPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/item_good_price"
        android:textSize="13sp"
        android:text="￥399.99"/>

</LinearLayout>
