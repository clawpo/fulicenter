<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ebebe9"
	android:orientation="vertical">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:background="@color/good_detail_title_bg">
		<ImageView
			android:id="@+id/ivReturn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:padding="5dp"
			android:src="@drawable/selector_return_bg"/>
		<TextView
			android:id="@+id/tvBoutiqueChildName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dp"
			android:layout_toRightOf="@id/ivReturn"
			android:text="精品商品"
            android:lines="1"
            android:ellipsize="end"
			android:textColor="#fff"
			android:textSize="18sp"/>
	</RelativeLayout>

	<android.support.v4.widget.SwipeRefreshLayout
		android:id="@+id/srl_boutique_child"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingTop="10dp"
		android:background="@color/list_background">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView
				android:id="@+id/tv_refresh_hint"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:visibility="gone"
				android:text="@string/now_refresh"
				android:textSize="18sp"
				android:textStyle="bold"/>
			<android.support.v7.widget.RecyclerView
				android:id="@+id/rv_boutique_child"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:columnWidth="150dp"
				android:horizontalSpacing="10dp"
				android:numColumns="auto_fit"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:verticalSpacing="10dp" />
		</LinearLayout>
	</android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>